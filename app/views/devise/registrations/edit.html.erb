<h1 class="text-center"><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

<div class="d-flex justify-content-center align center">
  <div class="col-md-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
  <%= bootstrap_devise_error_messages! %>
  <% if current_user.present? %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>

 


   <div class="form-group">
    <%= f.label :contact_no %>
    <%= f.text_field :contact_no, autofocus: true, autocomplete: 'contact_no', class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :DOB %>
    <%= f.date_field :dob, autofocus: true, autocomplete: 'dob', class: 'form-control' %>
  </div>
<%end%>
<%if current_supplier.present?%>
   <div class="form-group">
    <%= f.label :contact_name %>
    <%= f.text_field :contact_name, autofocus: true, autocomplete: 'contact_name', class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :company_name %>
    <%= f.text_field :company_name, autofocus: true, autocomplete: 'company_name', class: 'form-control' %>
  </div>  

   <div class="form-group">
    <%= f.label :contact_number %>
    <%= f.text_field :contact_number, autofocus: true, autocomplete: 'contact_number', class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: 'address', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, autofocus: true, autocomplete: 'city', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, autofocus: true, autocomplete: 'state', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, autofocus: true, autocomplete: 'country', class: 'form-control' %>
  </div>

<%end%>

 <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

    <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
  </div>

  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary' %>
  </div>
<% end %>

<p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>

<%= link_to t('.back'), :back %>
</div>
</div>