<center>
<h3 class="my-4 text-primary"> Reviews</h3>
<hr>
<% @review.each do |review| %>
 

<div class="ml-4">
  <h5 class="fa fa-user-circle"><span class="ml-2"><%= review.user.name %></span></h5>
   <div class="review-rating" data-score = "<%= review.rating %>"></div>

  <p><%= review.content %></p>
    <p><%= time_ago_in_words(review.created_at) %>ago</p>

<div class="button mr-3">	<%= link_to "edit", edit_review_path(review)%></div>
	<div class="button"><%= link_to "delete", review_path(review) , method: :delete%></div>
	

</div>

<hr>
<% end %>
</center>
