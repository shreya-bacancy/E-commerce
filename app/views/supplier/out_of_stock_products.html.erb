<%= render 'supplier/navbar' %>
<div>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">product name</th>
					<th scope="col">stock</th>
				
					
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product|%>
